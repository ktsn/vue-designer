{
  "name": "vue-designer",
  "displayName": "Vue Designer",
  "main": "./lib/vue-designer",
  "version": "0.7.1",
  "description": "Vue component design tool",
  "keywords": [
    "Vue",
    "component",
    "design tool",
    "single file component",
    "preview"
  ],
  "categories": [
    "Other"
  ],
  "scripts": {
    "vscode:prepublish": "yarn clean && yarn build",
    "preversion": "yarn test",
    "version": "conventional-changelog -p angular -s -i CHANGELOG.md",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "clean": "rimraf lib",
    "watch": "run-p watch:*",
    "watch:server": "tsc --watch -p tsconfig.main.json",
    "watch:client": "vite",
    "build": "tsc --sourceMap false -p tsconfig.main.json && vite build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest"
  },
  "repository": "https://github.com/ktsn/vue-designer",
  "license": "MIT",
  "publisher": "ktsn",
  "activationEvents": [
    "onCommand:extension.openVueDesigner"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Vue Designer configuration",
      "properties": {
        "vueDesigner.sharedStyles": {
          "type": "array",
          "default": [],
          "description": "Path to css files which will be loaded globally in the preview"
        }
      }
    },
    "commands": [
      {
        "command": "extension.openVueDesigner",
        "title": "Open Vue Designer"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.openVueDesigner",
          "when": "resourceLangId == vue-html"
        }
      ]
    }
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "dependencies": {
    "@babel/parser": "^7.0.0",
    "@babel/types": "^7.0.0",
    "eslint": "^8.55.0",
    "hash-sum": "^1.0.2",
    "lodash.debounce": "^4.0.8",
    "postcss": "^7.0.2",
    "postcss-safe-parser": "^4.0.1",
    "postcss-selector-parser": "^6.0.13",
    "vue-eslint-parser": "^3.2.2",
    "vue-template-compiler": "^2.5.17",
    "ws": "^6.0.0"
  },
  "devDependencies": {
    "@types/eslint-scope": "^3.7.0",
    "@types/eslint-visitor-keys": "^1.0.0",
    "@types/lodash.debounce": "^4.0.4",
    "@types/ws": "^6.0.0",
    "@vitejs/plugin-vue2": "^2.3.1",
    "@vue/test-utils": "1.0.0-beta.20",
    "conventional-changelog-cli": "^2.0.5",
    "jsdom": "^16.7.0",
    "lodash.camelcase": "^4.3.0",
    "material-design-icons": "^3.0.1",
    "npm-run-all": "^4.1.3",
    "prettier": "^2.8.8",
    "pretty": "^2.0.0",
    "rimraf": "^2.6.2",
    "sinai": "^0.3.0",
    "testdouble": "^3.8.1",
    "typescript": "~5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.4",
    "vscode": "^1.1.37",
    "vue": "^2.5.17",
    "vue-global-events": "^1.0.3",
    "vue-server-renderer": "^2.5.17",
    "vue-tsc": "^1.8.25"
  }
}
