{
  "name": "vue-designer",
  "displayName": "Vue Designer",
  "main": "./lib/vue-designer",
  "version": "0.3.0",
  "description": "Vue component design tool",
  "keywords": [
    "Vue",
    "component",
    "design tool",
    "single file component",
    "preview"
  ],
  "categories": [
    "Other"
  ],
  "scripts": {
    "vscode:prepublish": "npm run clean && npm run build",
    "preversion": "npm run test",
    "version": "conventional-changelog -p angular -s -i CHANGELOG.md",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "clean": "rimraf lib",
    "watch": "run-p watch:*",
    "watch:ts": "tsc --watch -p tsconfig.main.json",
    "watch:webpack": "webpack-dev-server --hot --config webpack.config.js --mode development",
    "build": "tsc --sourceMap false -p tsconfig.main.json && webpack --config webpack.config.js --mode production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage -w 2",
    "format": "prettier --write \"{src,test}/**/*.{ts,vue}\""
  },
  "repository": "https://github.com/ktsn/vue-designer",
  "license": "MIT",
  "publisher": "ktsn",
  "activationEvents": [
    "onCommand:extension.openVueDesigner"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.openVueDesigner",
        "title": "Open Vue Designer"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.openVueDesigner",
          "when": "resourceLangId == vue-html"
        }
      ]
    }
  },
  "engines": {
    "vscode": "^1.18.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.vue$": "vue-jest"
    },
    "setupFiles": [
      "<rootDir>/test/setup.ts"
    ],
    "testRegex": "/test/.+\\.spec\\.(js|ts)$",
    "moduleNameMapper": {
      "^@/(.+)$": "<rootDir>/src/$1",
      "^vue$": "vue/dist/vue.runtime.common.js"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "vue"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,vue}"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    }
  },
  "dependencies": {
    "@babel/types": "^7.0.0-beta.40",
    "babylon": "^7.0.0-beta.40",
    "eslint": "github:eslint/eslint#6b71fd0",
    "hash-sum": "^1.0.2",
    "meck": "^0.1.1",
    "postcss": "^6.0.19",
    "postcss-safe-parser": "^3.0.1",
    "postcss-selector-parser": "^3.1.1",
    "vue-eslint-parser": "^2.0.3",
    "vue-template-compiler": "^2.5.13",
    "ws": "^4.1.0"
  },
  "devDependencies": {
    "@types/eslint-scope": "^3.7.0",
    "@types/eslint-visitor-keys": "^1.0.0",
    "@types/jest": "^22.1.3",
    "@types/ws": "^4.0.1",
    "@vue/test-utils": "^1.0.0-beta.12",
    "codecov": "^3.0.0",
    "conventional-changelog": "^1.1.18",
    "css-loader": "^0.28.10",
    "jest": "^22.4.2",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "prettier": "1.11.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "testdouble": "^3.5.2",
    "ts-jest": "^22.4.0",
    "ts-loader": "^4.0.0",
    "typescript": "^2.7.2",
    "vscode": "^1.1.10",
    "vue": "^2.5.13",
    "vue-global-events": "^1.0.3",
    "vue-jest": "^2.1.0",
    "vue-loader": "^15.0.0-rc.2",
    "vue-style-loader": "^4.1.0",
    "vuex": "github:ktsn/vuex#fc1f29b",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.9",
    "webpack-dev-server": "^3.0.0",
    "webpack-merge": "^4.1.2"
  }
}
