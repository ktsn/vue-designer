{
  "name": "vue-designer",
  "displayName": "Vue Designer",
  "main": "./lib/vue-designer",
  "version": "0.6.1",
  "description": "Vue component design tool",
  "keywords": [
    "Vue",
    "component",
    "design tool",
    "single file component",
    "preview"
  ],
  "categories": [
    "Other"
  ],
  "scripts": {
    "vscode:prepublish": "npm run clean && npm run build",
    "preversion": "npm run test",
    "version": "conventional-changelog -p angular -s -i CHANGELOG.md",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "clean": "rimraf lib",
    "watch": "run-p watch:*",
    "watch:ts": "tsc --watch -p tsconfig.main.json",
    "watch:webpack": "webpack-dev-server --hot --config webpack.config.js --mode development",
    "build": "tsc --sourceMap false -p tsconfig.main.json && webpack --config webpack.config.js --mode production",
    "test": "jest -w 2",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage -w 2",
    "format": "prettier --write \"{src,test}/**/*.{ts,vue}\""
  },
  "repository": "https://github.com/ktsn/vue-designer",
  "license": "MIT",
  "publisher": "ktsn",
  "activationEvents": [
    "onCommand:extension.openVueDesigner"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Vue Designer configuration",
      "properties": {
        "vueDesigner.sharedStyles": {
          "type": "array",
          "default": [],
          "description": "Path to css files which will be loaded globally in the preview"
        }
      }
    },
    "commands": [
      {
        "command": "extension.openVueDesigner",
        "title": "Open Vue Designer"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.openVueDesigner",
          "when": "resourceLangId == vue-html"
        }
      ]
    }
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "dependencies": {
    "@babel/types": "^7.0.0-beta.54",
    "babylon": "^7.0.0-beta.40",
    "eslint": "^5.2.0",
    "hash-sum": "^1.0.2",
    "meck": "^0.1.1",
    "postcss": "^7.0.1",
    "postcss-safe-parser": "^4.0.1",
    "postcss-selector-parser": "^5.0.0-rc.3",
    "vue-eslint-parser": "^3.1.1",
    "vue-template-compiler": "^2.5.16",
    "ws": "^6.0.0"
  },
  "devDependencies": {
    "@types/eslint-scope": "^3.7.0",
    "@types/eslint-visitor-keys": "^1.0.0",
    "@types/jest": "^23.3.0",
    "@types/ws": "^5.1.2",
    "@vue/test-utils": "^1.0.0-beta.20",
    "codecov": "^3.0.4",
    "conventional-changelog": "^2.0.1",
    "css-loader": "^1.0.0",
    "jest": "^23.4.1",
    "material-design-icons": "^3.0.1",
    "npm-run-all": "^4.1.3",
    "prettier": "1.13.7",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "sinai": "^0.2.2",
    "testdouble": "^3.8.1",
    "ts-jest": "^23.0.1",
    "ts-loader": "^4.4.2",
    "typescript": "^2.9.2",
    "vscode": "^1.1.18",
    "vue": "^2.5.16",
    "vue-global-events": "^1.0.3",
    "vue-jest": "^2.6.0",
    "vue-loader": "^15.2.6",
    "vue-server-renderer": "^2.5.16",
    "vue-style-loader": "^4.1.1",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.3"
  }
}
